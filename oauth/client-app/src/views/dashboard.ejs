<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Notes Analytics</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f5f7fa;
      min-height: 100vh;
    }
    .navbar {
      background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 100%);
      color: white;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .navbar-brand {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 20px;
      font-weight: 600;
    }
    .navbar-user {
      display: flex;
      align-items: center;
      gap: 16px;
    }
    .avatar {
      width: 36px;
      height: 36px;
      background: #22c55e;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }
    .btn-disconnect {
      background: rgba(255,255,255,0.2);
      color: white;
      padding: 8px 16px;
      border-radius: 6px;
      text-decoration: none;
      font-size: 14px;
    }
    .btn-disconnect:hover {
      background: rgba(255,255,255,0.3);
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 24px;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 24px;
    }
    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .stat-icon {
      font-size: 32px;
      margin-bottom: 12px;
    }
    .stat-value {
      font-size: 36px;
      font-weight: 700;
      color: #1e3a5f;
    }
    .stat-label {
      font-size: 14px;
      color: #666;
      margin-top: 4px;
    }
    .card {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 24px;
    }
    .card-title {
      font-size: 18px;
      font-weight: 600;
      color: #333;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .notes-list {
      display: grid;
      gap: 12px;
    }
    .note-item {
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 4px solid #3b82f6;
    }
    .note-title {
      font-weight: 600;
      color: #333;
      margin-bottom: 4px;
    }
    .note-meta {
      font-size: 13px;
      color: #666;
    }
    .note-preview {
      margin-top: 8px;
      font-size: 14px;
      color: #555;
      line-height: 1.5;
    }
    .word-cloud {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    .word-tag {
      padding: 6px 12px;
      background: #e0e7ff;
      color: #3730a3;
      border-radius: 16px;
      font-size: 14px;
    }
    .word-tag .count {
      background: #3730a3;
      color: white;
      padding: 2px 6px;
      border-radius: 10px;
      font-size: 12px;
      margin-left: 4px;
    }
    .highlight-box {
      display: flex;
      gap: 20px;
      margin-bottom: 24px;
    }
    .highlight-item {
      flex: 1;
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .highlight-label {
      font-size: 12px;
      color: #666;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
    }
    .highlight-title {
      font-weight: 600;
      color: #333;
      margin-bottom: 4px;
    }
    .highlight-value {
      color: #22c55e;
      font-weight: 600;
    }
    .token-info {
      background: #fef3c7;
      border-radius: 8px;
      padding: 12px 16px;
      font-size: 13px;
      color: #92400e;
      margin-top: 24px;
    }
    .grid-2 {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 24px;
    }
    @media (max-width: 768px) {
      .grid-2 {
        grid-template-columns: 1fr;
      }
      .highlight-box {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">
      <span>üìä</span>
      <span>Notes Analytics</span>
    </div>
    <div class="navbar-user">
      <% if (user) { %>
        <div class="avatar"><%= user.username ? user.username.charAt(0).toUpperCase() : '?' %></div>
        <span><%= user.username %></span>
      <% } %>
      <a href="/disconnect" class="btn-disconnect">Disconnect</a>
    </div>
  </nav>
  
  <div class="container">
    <h1 style="margin-bottom: 24px; color: #333;">üìà Your Notes Analytics</h1>
    
    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">üìù</div>
        <div class="stat-value"><%= analytics.totalNotes %></div>
        <div class="stat-label">Total Notes</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">üìñ</div>
        <div class="stat-value"><%= analytics.totalWords.toLocaleString() %></div>
        <div class="stat-label">Total Words</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">üìä</div>
        <div class="stat-value"><%= analytics.averageWordsPerNote %></div>
        <div class="stat-label">Avg Words/Note</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">üî§</div>
        <div class="stat-value"><%= analytics.totalCharacters.toLocaleString() %></div>
        <div class="stat-label">Total Characters</div>
      </div>
    </div>
    
    <!-- Highlights -->
    <% if (analytics.longestNote || analytics.shortestNote) { %>
      <div class="highlight-box">
        <% if (analytics.longestNote) { %>
          <div class="highlight-item">
            <div class="highlight-label">üìè Longest Note</div>
            <div class="highlight-title"><%= analytics.longestNote.title %></div>
            <div class="highlight-value"><%= analytics.longestNote.wordCount %> words</div>
          </div>
        <% } %>
        <% if (analytics.shortestNote) { %>
          <div class="highlight-item">
            <div class="highlight-label">üìê Shortest Note</div>
            <div class="highlight-title"><%= analytics.shortestNote.title %></div>
            <div class="highlight-value"><%= analytics.shortestNote.wordCount %> words</div>
          </div>
        <% } %>
      </div>
    <% } %>
    
    <div class="grid-2">
      <!-- Notes List -->
      <div class="card">
        <h3 class="card-title">üìã Your Notes</h3>
        <div class="notes-list">
          <% notes.forEach(function(note) { %>
            <div class="note-item">
              <div class="note-title"><%= note.title %></div>
              <div class="note-meta">Created: <%= new Date(note.createdAt).toLocaleDateString() %></div>
              <div class="note-preview"><%= note.content.substring(0, 150) %><%= note.content.length > 150 ? '...' : '' %></div>
            </div>
          <% }); %>
        </div>
      </div>
      
      <!-- Word Frequency -->
      <div>
        <div class="card">
          <h3 class="card-title">üî§ Top Words</h3>
          <div class="word-cloud">
            <% analytics.wordFrequency.forEach(function(item) { %>
              <span class="word-tag">
                <%= item.word %>
                <span class="count"><%= item.count %></span>
              </span>
            <% }); %>
          </div>
        </div>
        
        <!-- Notes per Month -->
        <% if (Object.keys(analytics.notesPerMonth).length > 0) { %>
          <div class="card">
            <h3 class="card-title">üìÖ Notes by Month</h3>
            <% Object.entries(analytics.notesPerMonth).forEach(function([month, count]) { %>
              <div style="display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid #eee;">
                <span><%= month %></span>
                <strong><%= count %> note<%= count > 1 ? 's' : '' %></strong>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Token Info -->
    <div class="token-info">
      üîê <strong>OAuth Token Info:</strong> 
      Scopes: <code><%= tokenInfo.scope %></code> | 
      Expires: <code><%= new Date(tokenInfo.expiresAt).toLocaleString() %></code>
    </div>
  </div>
</body>
</html>
