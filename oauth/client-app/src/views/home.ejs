<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes Analytics - OAuth Demo</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .container {
      text-align: center;
      color: white;
      max-width: 600px;
    }
    .logo {
      font-size: 80px;
      margin-bottom: 20px;
    }
    h1 {
      font-size: 42px;
      margin-bottom: 16px;
    }
    .subtitle {
      font-size: 20px;
      opacity: 0.9;
      margin-bottom: 40px;
    }
    .card {
      background: white;
      border-radius: 16px;
      padding: 40px;
      color: #333;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .card h2 {
      font-size: 24px;
      margin-bottom: 16px;
    }
    .card p {
      color: #666;
      margin-bottom: 30px;
      line-height: 1.6;
    }
    .btn {
      display: inline-block;
      padding: 16px 32px;
      border-radius: 8px;
      font-size: 18px;
      font-weight: 600;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-primary {
      background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
      color: white;
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
    }
    .btn-secondary {
      background: #f3f4f6;
      color: #374151;
    }
    .btn-secondary:hover {
      background: #e5e7eb;
    }
    .features {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      margin-top: 30px;
    }
    .feature {
      text-align: center;
    }
    .feature-icon {
      font-size: 32px;
      margin-bottom: 8px;
    }
    .feature-text {
      font-size: 14px;
      color: #666;
    }
    .user-status {
      background: #ecfdf5;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }
    .user-status .avatar {
      width: 40px;
      height: 40px;
      background: #22c55e;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
    }
    .buttons-group {
      display: flex;
      gap: 12px;
      justify-content: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo">üìä</div>
    <h1>Notes Analytics</h1>
    <p class="subtitle">Get insights from your notes with powerful analytics</p>
    
    <div class="card">
      <% if (isLoggedIn && user) { %>
        <div class="user-status">
          <div class="avatar"><%= user.username ? user.username.charAt(0).toUpperCase() : '?' %></div>
          <div>
            <strong>Connected as <%= user.username %></strong>
          </div>
        </div>
        <h2>Welcome back!</h2>
        <p>Your Notes account is connected. View your analytics dashboard to see insights about your notes.</p>
        <div class="buttons-group">
          <a href="/dashboard" class="btn btn-primary">üìä View Dashboard</a>
          <a href="/disconnect" class="btn btn-secondary">Disconnect</a>
        </div>
      <% } else { %>
        <h2>Connect Your Notes</h2>
        <p>This app analyzes your notes to provide insights like word counts, writing patterns, and more. Connect your Notes account to get started.</p>
        <button onclick="openOAuthPopup()" class="btn btn-primary" id="connectBtn">üîó Connect Notes Account</button>
        <div id="connectStatus" style="margin-top: 16px; display: none;">
          <div style="display: flex; align-items: center; justify-content: center; gap: 8px; color: #666;">
            <span class="spinner"></span>
            <span>Waiting for authorization...</span>
          </div>
        </div>
        
        <div class="features">
          <div class="feature">
            <div class="feature-icon">üìù</div>
            <div class="feature-text">Word Count Analysis</div>
          </div>
          <div class="feature">
            <div class="feature-icon">üìà</div>
            <div class="feature-text">Writing Trends</div>
          </div>
          <div class="feature">
            <div class="feature-icon">üî§</div>
            <div class="feature-text">Word Frequency</div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  
  <style>
    .spinner {
      width: 20px;
      height: 20px;
      border: 3px solid #e5e7eb;
      border-top-color: #22c55e;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
  
  <script>
    let authPopup = null;
    let pollTimer = null;
    
    function openOAuthPopup() {
      // Calculate popup position (centered)
      const width = 500;
      const height = 700;
      const left = window.screenX + (window.innerWidth - width) / 2;
      const top = window.screenY + (window.innerHeight - height) / 2;
      
      // Open popup
      authPopup = window.open(
        '/connect-popup',
        'oauth_popup',
        `width=${width},height=${height},left=${left},top=${top},scrollbars=yes,resizable=yes`
      );
      
      // Show waiting status
      document.getElementById('connectBtn').disabled = true;
      document.getElementById('connectBtn').textContent = '‚è≥ Authorizing...';
      document.getElementById('connectStatus').style.display = 'block';
      
      // Listen for message from popup
      window.addEventListener('message', handleOAuthMessage);
      
      // Poll to check if popup was closed
      pollTimer = setInterval(() => {
        if (authPopup && authPopup.closed) {
          clearInterval(pollTimer);
          window.removeEventListener('message', handleOAuthMessage);
          resetConnectButton();
        }
      }, 500);
    }
    
    function handleOAuthMessage(event) {
      // Verify origin
      if (event.origin !== window.location.origin) return;
      
      const data = event.data;
      if (data.type === 'oauth_complete') {
        clearInterval(pollTimer);
        window.removeEventListener('message', handleOAuthMessage);
        
        if (data.success) {
          // Redirect to dashboard
          window.location.href = '/dashboard';
        } else {
          // Show error
          alert('Authorization failed: ' + (data.error || 'Unknown error'));
          resetConnectButton();
        }
        
        // Close popup if still open
        if (authPopup && !authPopup.closed) {
          authPopup.close();
        }
      }
    }
    
    function resetConnectButton() {
      document.getElementById('connectBtn').disabled = false;
      document.getElementById('connectBtn').textContent = 'üîó Connect Notes Account';
      document.getElementById('connectStatus').style.display = 'none';
    }
  </script>
</body>
</html>
